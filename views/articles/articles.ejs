<h2>All articles</h2>
<form action="/articles/add" method="POST">
  <div class="input-field col s12 l6">
    <input type="text" id="first_name" class="validate" name="title" required>
    <label for="first_name">Article_Title</label>
  </div>
  <div class="input-field col s12">
    <textarea id="textarea1" class="materialize-textarea validate" name="body" required></textarea>
    <label for="textarea1">Article_Body</label>
  </div>
  <div class="col s12">
      <button class="btn waves-effect waves-light" type="submit" name="submit">
          <i class="material-icons">Add_Articles</i>
      </button>
  </div>
</form>
<table class="striped">
    <thead>
        <tr>
            <th data-field="id">Article_Title</th>
            <th data-field="name">Article_Body</th>
            <th data-field="price">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% articles.forEach(function(article){ %>

            <tr>
                    <td><%= article.title %></td>
                    <td><%= article.body %></td>
                    <td>
                        <a href="/articles/edit/<%= article.id %>">Edit</a> |
                        <a href="/articles/delete/<%= article.id %>">Delete</a>
                    </td>
                </tr>

       <%  });  %>
       
    </tbody>
</table>