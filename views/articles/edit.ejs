<form action="/articles/update/<%= articles.id %>" method="POST">
    <div class="input-field col s12 l6">
      <input type="text" id="first_name" class="validate" name="title" value="<%= articles.title %>" required>
      <label for="first_name">Article_Title</label>
    </div>
    <div class="input-field col s12">
      <textarea id="textarea1" class="materialize-textarea validate" name="body" required><%= articles.body %></textarea>
      <label for="textarea1">Article_Body</label>
    </div>
    <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="submit">
            <i class="material-icons">Add_Articles</i>
        </button>
    </div>
  </form>